@model ASPTask1.Models.MainViewModel

<!DOCTYPE html>
<html>
<head>
	<style>
		* {
			padding: 0;
			margin: 0;
			box-sizing: border-box;
		}

		body {
			background-color: whitesmoke;
		}

		h1 {
			margin: 20px;
		}

		.card {
			width: 20%;
			margin: 20px;
			background-color: white;
			border-radius: 10px;
			cursor: pointer;
			position: relative;
			box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.25);
		}

		.card p {
			margin: -10px 0 0 10px;
			padding: 10px 0 10px 0;
		}
	</style>
</head>
<body>
	<h1>We have @Model.HotMeals.Count() hot meals in total.</h1>
	@foreach (var item in Model.HotMeals)
	{
		<div class="card">
			<p>ID: @item.ID</p>
			<p>Name: @item.Name</p>
			<p>Price: @item.Price</p>
		</div>
	}
</body>
</html>